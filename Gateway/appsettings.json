{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",

  "RateLimitSettings": {
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "QuotaExceededResponse": {
      "Content": "Rate limit exceeded. Try again in {0} seconds"
    }
  },

  "RateLimitPolicies": {
    "ClientRules": [
      {
        "clientId": "*",
        "rules": [
          {
            "Endpoint": "*",
            "Period": "60s",
            "Limit": 10
          }
        ]
      },
      {
        "clientId": "client01",
        "rules": [
          {
            "Endpoint": "*",
            "Period": "10s",
            "Limit": 3
          }
        ]
      }
    ]
  }
}
